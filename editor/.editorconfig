# top-most config, since it's in $HOME folder
root = true

# config for all file extensions
[*]
# UNIX-style newlines
end_of_line = lf
# insert newline at end of file
insert_final_newline = true
# always use spaces for indent (convert tabs to spaces)
indent_style = space
# indent size is 2 spaces, unless overriden
indent_size = 2
# trim trailing whitespace(s)
trim_trailing_whitespace = true
# use utf-8 encoding
charset = utf-8

# config for markdown files
[*.md]
# use 4 space indents
indent_size = 4
# do not trim trailing whitespace(s)
trim_trailing_whitespace = false
