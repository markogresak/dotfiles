root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# enforce same indent as generated by npm/yarn
[package.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
indent_style = space

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
