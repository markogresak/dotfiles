# global config, used by zsh and bash rc

## paths
esPath="$HOME/Documents/dev/.emscripten_sdk"
caskroom="/opt/homebrew-cask/Caskroom"
# nvm (Node Version Manager) installs location
export NVM_DIR=~/.nvm
# path to global npm packages
export NPM_GLOBAL="$HOME/.node/lib/node_modules"
# system and node/npm related paths
PATH="$HOME/.node/bin:$NPM_GLOBAL:/usr/local/opt:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/sbin:/opt/mongodb"
# Haskell
PATH="$PATH:$HOME/Library/Haskell/bin"
# emscripten
PATH="$PATH:$esPath:$esPath/clang/e1.27.0_64bit:$esPath/node/0.10.18_64bit/bin:$esPath/emscripten/1.27.0"
# caskroom exports
PATH="$PATH:$caskroom/vlc/2.1.4/VLC.app/Contents/MacOS"
# latex
PATH="$PATH:/usr/local/texlive/2014/bin/x86_64-darwin"
export PATH=$PATH
# android sdk
export ANDROID_HOME="/usr/local/Cellar/android-sdk/23.0.2"
# browser bin locations (used by Karma runner)
export CHROME_BIN="$caskroom/google-chrome/latest/Google Chrome.app/Contents/MacOS/Google Chrome"
export FIREFOX_BIN="$caskroom/firefox/latest/Firefox.app/Contents/MacOS/firefox"
export PHANTOMJS_BIN="/usr/local/bin/phantomjs"
# path to sublime packages
export SUBL_PACKAGES="$HOME/Library/Application Support/Sublime Text 3/Packages"
# coffee lint config file
export COFFEELINT_CONFIG=~/coffeelint.json
# local paths (used a lot)
export sola=$HOME/Documents/Sola
export dev=$HOME/Documents/dev
export gen=$HOME/Documents/genialis
export repos=$HOME/Documents/repositories
# project path (used by cdproj function)
export proj="$gen/genesis"
unset esPath
unset caskroom

## globally used variables
# student id
export id=63130058
export ID=$id
# servers
export mgresak=ec2-user@gresak.io
export gresakio=ec2-user@gresak.io
export sshelp=root@sshelp.gresak.io
export lalgec="s$ID@lalgec.fri.uni-lj.si"
# node settings
export NODE_ENV="development"
export PORT=3000
# editor settings
export EDITOR=gvim
export MYVIMRC="~/.vimrc"

## aliases
alias npmr="npm run-script"
# npm install
alias npi="npm install"
alias npis="npm install -S"
alias npid="npm install -D"
alias npig="npm install -g"
# npm remove
alias npr="npm rm"
alias nprs="npm rm -S"
alias nprd="npm rm -D"
alias nprg="npm rm -g"
# npm run-script
alias nrs="npm run-script"
# vagrant
alias vgu="vagrant up"
alias vgs="vagrant ssh"
alias vgh="vagrant halt"
alias vgd="vagrant destroy"
alias vst="vagrant status"

## config
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
