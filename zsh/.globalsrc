#!/usr/local/bin/bash
# Using bash (4.3) with gnutools, gnu-sed -- install with brew

# global config, used by zsh and bash rc

## paths

# path to global npm packages
# browser bin locations (used by Karma runner)
export CHROME_BIN="/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
export FIREFOX_BIN="/Applications/Firefox.app/Contents/MacOS"
export PHANTOMJS_BIN="$NVM_BIN/phantomjs"
# Add brew opt folder (bash, vim, gnutools) and Firefox folder (needed by Protractor).
export PATH="$PATH:/usr/local/opt:/usr/local/sbin:$HOME/Applications/Firefox.app/Contents/MacOS:$HOME/.composer/vendor/bin"
# local paths
docs_base_path=$HOME/Documents
export docs="$docs_base_path"
export sola="$docs_base_path/sola/3.letnik"
export dev="$docs_base_path/projects"
export repos="$docs_base_path/projects"
# path to project folder
export proj="$docs_base_path/dlabs"

## globally used variables
# student id
export id=63130058
export ID=$id
# servers
export mgresak=ubuntu@gresak.io
export gresakio=ubuntu@gresak.io
export sshelp=root@sshelp.gresak.io
export lalgec="u$ID@lalgec.fri.uni-lj.si"
# node settings
export NODE_ENV="development"
# editor settings
export EDITOR=vim
alias sudoedit="sudo $EDITOR"
export MYVIMRC="~/.vimrc"

## aliases
# npm install
alias npi="npm install"
alias npis="npm install -S"
alias npid="npm install -D"
alias npig="npm install -g"
# npm remove
alias npr="npm rm"
alias nprs="npm rm -S"
alias nprd="npm rm -D"
alias nprg="npm rm -g"
# npm run-script
alias nrs="npm run-script"
alias nps="npm start"
# npm init -y (yes to all)
alias npii="npm init -y"
# vagrant
alias vgu="vagrant up"
alias vgs="vagrant ssh"
alias vgh="vagrant halt"
alias vgd="vagrant destroy"
alias vst="vagrant status"
#git
alias gcd="git checkout develop"
alias gfr="git fresh"
alias gsta="git stash"
# github client
alias gh="github"
alias gh.="github ."
# ssh
alias ssg="ssh gresakio"
# atom
alias at="atom"
alias att="atom ."
alias atp="atom $proj"
# brew
alias bs="brew search"
alias bi="brew install"
alias bui="brew uninstall"
alias bci="brew cask install"
alias bcui="brew cask uninstall"
# foreman
alias fs="foreman start"
alias fsl="foreman start -f Procfile.local"
# merge pdf (OS X)
alias mergepdf="/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py"
# python
alias py=python3

## config
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
