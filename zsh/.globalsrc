#!/usr/local/bin/bash
# Using bash (4.3) with gnutools, gnu-sed -- install with brew

# global config, used by zsh and bash rc

## paths

# path to global npm packages
# browser bin locations (used by Karma runner)
export CHROME_BIN="$HOME/Applications/Google Chrome.app/Contents/MacOS"
export FIREFOX_BIN="$HOME/Applications/Firefox.app/Contents/MacOS"
export PHANTOMJS_BIN="$NVM_BIN/phantomjs"
# Add brew opt folder (bash, vim, gnutools) and Firefox folder (needed by Protractor).
export PATH="$PATH:/usr/local/opt:$HOME/Applications/Firefox.app/Contents/MacOS"
# local paths
export sola=$HOME/Documents/Sola
export dev=$HOME/Documents/dev
export gen=$HOME/Documents/genialis
export repos=$HOME/Documents/repositories
# path to project folder
export proj="$gen/genesis"

## globally used variables
# student id
export id=63130058
export ID=$id
# servers
export mgresak=ubuntu@gresak.io
export gresakio=ubuntu@gresak.io
export sshelp=root@sshelp.gresak.io
export lalgec="s$ID@lalgec.fri.uni-lj.si"
# node settings
export NODE_ENV="development"
export PORT=3000
# editor settings
export EDITOR=vim
export MYVIMRC="~/.vimrc"

## aliases
alias npmr="npm run-script"
# npm install
alias npi="npm install"
alias npis="npm install -S"
alias npid="npm install -D"
alias npig="npm install -g"
# npm remove
alias npr="npm rm"
alias nprs="npm rm -S"
alias nprd="npm rm -D"
alias nprg="npm rm -g"
# npm run-script
alias nrs="npm run-script"
alias nps="npm start"
# npm init -y (yes to all)
alias npii="npm init -y"
# vagrant
alias vgu="vagrant up"
alias vgs="vagrant ssh"
alias vgh="vagrant halt"
alias vgd="vagrant destroy"
alias vst="vagrant status"
# github client
alias gh="github"
# ssh
alias ssg="ssh $gresakio"
# atom
alias at="atom"
alias att="atom ."
alias atp="atom $proj"

## config
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
