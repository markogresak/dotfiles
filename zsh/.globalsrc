#!/usr/local/bin/bash
# Using bash (4.3) with gnutools, gnu-sed -- install with brew

# global config, used by zsh and bash rc

## paths

# path to global yarn packages
# browser bin locations (used by Karma runner)
export GPG_TTY=$(tty)
#export CC=gcc-7
export CHROME_BIN="/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
export FIREFOX_BIN="/Applications/Firefox.app/Contents/MacOS"
export PHANTOMJS_BIN="$NVM_BIN/phantomjs"
# Add brew opt folder (bash, vim, gnutools) and Firefox folder (needed by Protractor).
export GOPATH=$HOME/go
export PATH="$PATH:/usr/local/opt:/usr/local/sbin:$HOME/Applications/Firefox.app/Contents/MacOS:$HOME/.composer/vendor/bin:$GOPATH/bin:$HOME/.cabal/bin:/Library/TeX/texbin"
# local paths
export docs="$HOME/Documents"
export sola="$docs/sola/3.letnik"

local_projects_base_path=$HOME/LocalDocs/Projects
export dev="$local_projects_base_path/projects"
# path to project folder
export atr="$proj/pamoja-authoring-tool-react"
export pp="$local_projects_base_path/prezly"
export pd="$pp/prezly"
export wd="$pp/prezly/apps/backend"
alias wd="cd $wd"

## globally used variables
# servers
export mgresak=ubuntu@gresak.io
export gresakio=ubuntu@gresak.io
export sshelp=root@sshelp.gresak.io
# node settings
export NODE_ENV="development"
# editor settings
export EDITOR=vim
alias sudoedit="sudo $EDITOR"
export MYVIMRC="~/.vimrc"

## aliases
alias npi="npm i"
alias npis="npm i --save"
alias npid="npm i --save-dev"
alias npig="npm install -g"
# npm remove
alias npr="npm rm"
alias nprs="npm rm --save"
alias nprd="npm rm --save-dev"
alias nprg="npm rm -g"
# npm run-script
alias nrs="npm run"
alias nps="npm start"
# npm init -y (yes to all)
alias npii="npm init -y"
#git
alias gcd="git checkout demo"
alias gfr="git fresh"
alias gsta="git stash"
# github client
alias gh="github"
alias gh.="github ."
# ssh
alias ssg="ssh gresakio"
# atom
alias at="atom"
alias att="atom ."
alias atp="atom $proj"
# brew
alias bs="brew search"
alias bi="brew install"
alias bui="brew uninstall"
alias bci="brew cask install"
alias bcui="brew cask uninstall"
# foreman
alias fs="foreman start"
alias fsl="foreman start -f Procfile.local"
# docker
alias prezly=docker-sync-stack
# merge pdf (OS X)
alias mergepdf="/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py"
# python
alias py=python3
# prezly
alias plint="$pp/plint.sh $wd $pp"

## config
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
