# arguments: $1 = variable name, $2 = variable
check_variable() { if [[ -z "$2" ]]; then >&2 echo "You forgot to set value for variable '$1'."; fi }

# Sauce Labs credentials
export SAUCE_USERNAME=""
check_variable 'SAUCE_USERNAME' $SAUCE_USERNAME

export SAUCE_ACCESS_KEY=""
check_variable 'SAUCE_ACCESS_KEY' $SAUCE_ACCESS_KEY

# GitHub credentials
export GITHUB_USERNAME=""
check_variable 'GITHUB_USERNAME' $GITHUB_USERNAME

export GITHUB_TOKEN=""
check_variable 'GITHUB_TOKEN' $GITHUB_TOKEN

# Set `tsd` and `brew` GitHub API token for more requests per hour.
# Note: token w/o any scopes (all checkboxes unchecked) is enough and more safe.
export TSD_GITHUB_TOKEN=""

# Set brew token to the same as tsd.
export HOMEBREW_GITHUB_API_TOKEN="$TSD_GITHUB_TOKEN"

# AWS Credentials
export AWS_ACCESS_KEY_ID=""
check_variable 'AWS_ACCESS_KEY_ID' $AWS_ACCESS_KEY_ID

export AWS_SECRET_ACCESS_KEY=""
check_variable 'AWS_SECRET_ACCESS_KEY' $AWS_SECRET_ACCESS_KEY

export AWS_DEFAULT_REGION=""
check_variable 'AWS_DEFAULT_REGION' $AWS_DEFAULT_REGION
