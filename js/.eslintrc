{
  "parser": "babel-eslint",
  "plugins": [
    "flow-vars"
  ],
  "extends": "airbnb",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "jasmine": true,
  },
  "globals": {
    "__ENVIRONMENT__": false,
    "React": false
  },
  "rules": {
    "no-confusing-arrow": 0,
    "react/jsx-quotes": 0,
    "react/jsx-space-before-closing": 0,
    "jsx-quotes": [2, "prefer-double"],
    "func-names": 0,
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "no-undef": 2,
    "comma-dangle": 0,
    "max-len": [1, 120, 4, { "ignoreComments": true, "ignoreUrls": true, "ignorePattern": "^\\s*test\\s*\\(" }],
    "object-curly-spacing": [0, "always"],
    "arrow-body-style": [1, "as-needed"],
    "consistent-return": 0,
    "semi": [1, "never"],
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
  }
}
